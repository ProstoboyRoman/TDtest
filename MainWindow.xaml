<Window x:Class="TD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TD"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="Gray">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="299*"/>
            <ColumnDefinition Width="86*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Canvas x:Name="GameScreen" Grid.Column="1" Grid.Row="1">
            <Canvas.Background>
                <ImageBrush ImageSource="/Icons/Feld.png" Stretch="Fill"/>
            </Canvas.Background>
            <Image Width="73" Height="56"
                   Canvas.Left="484"
                   Canvas.Top="26"
                   Source="/Icons/pngwing.com(1).png" HorizontalAlignment="Left" VerticalAlignment="Center" />
            <Ellipse x:Name="Position1" Height="50" 
                     Canvas.Left="350" Stroke="Black" 
                     Canvas.Top="230" Width="50"
                     MouseEnter="Position_MouseEnter"
                     MouseLeave="Position_MouseLeave"
                     MouseLeftButtonDown="Position_MouseLeftButtonDown"
                     Fill= "Transparent"/>



            <Ellipse x:Name="Position2" Height="50" 
                     Canvas.Left="175" Stroke="Black"
                     Canvas.Top="258" Width="50" 
                     MouseEnter="Position_MouseEnter"
                     MouseLeave="Position_MouseLeave"
                     MouseLeftButtonDown="Position_MouseLeftButtonDown"
                     Fill= "Transparent"/>

            <Ellipse x:Name="Position3" Height="50" 
                     Canvas.Left="50" Stroke="Black"
                     Canvas.Top="258" Width="50" 
                     MouseEnter="Position_MouseEnter"
                     MouseLeave="Position_MouseLeave"
                     MouseLeftButtonDown="Position_MouseLeftButtonDown"
                     Fill= "Transparent"/>

            <Ellipse x:Name="Position4" Height="50" 
                     Canvas.Left="400" Stroke="Black"
                     Canvas.Top="100" Width="50" 
                     MouseEnter="Position_MouseEnter"
                     MouseLeave="Position_MouseLeave"
                     MouseLeftButtonDown="Position_MouseLeftButtonDown"
                     Fill= "Transparent"/>

            <Ellipse x:Name="Position5" Height="50" 
                     Canvas.Left="80" Stroke="Black"
                     Canvas.Top="70" Width="50" 
                     MouseEnter="Position_MouseEnter"
                     MouseLeave="Position_MouseLeave"
                     MouseLeftButtonDown="Position_MouseLeftButtonDown"
                     Fill= "Transparent"/>

            <Ellipse x:Name="Position6" Height="50" 
                     Canvas.Left="220" Stroke="Black"
                     Canvas.Top="150" Width="50" 
                     MouseEnter="Position_MouseEnter"
                     MouseLeave="Position_MouseLeave"
                     MouseLeftButtonDown="Position_MouseLeftButtonDown"
                     Fill= "Transparent"/>
        </Canvas>

        <Grid Grid.Column="2" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="85*"/>
                <RowDefinition Height="93*"/>
                <RowDefinition Height="70*"/>
                <RowDefinition Height="90*"/>
            </Grid.RowDefinitions>

            <Button x:Name="StartBTN1" Content="Spawn Enemy" 
                    HorizontalAlignment="Center" VerticalAlignment="Center" 
                    Height="40" Width="120" Click="StartBTN1_Click"/>

            <Button x:Name="TowerBTN" Content="Tower"
                    Grid.Row="1"
                    HorizontalAlignment="Center" 
                    Margin="0,16,0,0"
                    VerticalAlignment="Top"
                    Height="36" Width="114"
                    Click="TowerBTN_Click"/>

            <Button x:Name="GoldMineBTN" Content="Gold Mine"
                    Grid.Row="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Height="36" Width="114"
                    Click="GoldMineBTN_Click"/>
        </Grid>

        <Button Grid.Column="2" Content="Button"
                HorizontalAlignment="Left"
                Margin="383,154,0,0"
                Grid.Row="1"
                VerticalAlignment="Top"
                Width="0"/>
    </Grid>
</Window>
